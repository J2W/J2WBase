<resources>

    <style name="None" />

    <style name="J2W" />

    <!-- 默认布局 -->
    <style name="J2W.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="J2W.Layout.Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!-- 进度条样式. -->
    <style name="J2W.Layout.Wrap.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/j2w_progress_indeterminate</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">900</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:maxWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:maxHeight">40dp</item>
    </style>


    <!-- TabHost -->
    <style name="J2W.Layout.TabHost">
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- Tabcontent -->
    <style name="J2W.Layout.Tabcontent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0</item>
    </style>

    <!-- ViewPagerTab -->
    <style name="J2W.Layout.ViewPagerTabStrip">
        <item name="android:layout_height">48dp</item>
        <!-- 背景颜色-->
        <item name="android:background">@drawable/j2w_viewpager_background_tabs</item>
    </style>
    <!-- Viewpager -->
    <style name="J2W.Layout.Viewpager">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
