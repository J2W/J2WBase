<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="None" />

    <style name="J2W" />

    <!-- 默认布局 -->
    <style name="J2W.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="J2W.Layout.Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="J2W.Layout.Wrap.View">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="J2W.Layout.Deafult">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="J2W.Layout.ListView">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>



    <!-- 进度条样式. -->
    <style name="J2W.Layout.Wrap.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/j2w_progress_indeterminate</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">900</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:maxWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:maxHeight">40dp</item>
    </style>


    <!-- TabHost -->
    <style name="J2W.Layout.TabHost">
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- Tabcontent -->
    <style name="J2W.Layout.Tabcontent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0</item>
    </style>

    <!-- ViewPagerTab -->
    <style name="J2W.Layout.ViewPagerTabStrip">
        <item name="android:layout_height">48dp</item>
        <!-- 背景颜色-->
        <item name="android:background">@drawable/j2w_viewpager_background_tabs</item>
    </style>

    <style name="J2W.Layout.ViewPagerTabStripDiy">
        <item name="android:layout_height">wrap_content</item>
        <!-- 背景颜色-->
        <item name="android:background">@drawable/j2w_viewpager_background_tabs</item>
    </style>
    <!-- 默认背景 -->
    <style name="J2W.Layout.TabStripBackGround">
        <item name="android:background">@android:color/white</item>
    </style>
    <!-- Viewpager -->
    <style name="J2W.Layout.Viewpager">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- ListViewRefresh -->
    <style name="J2WRefreshStyle">
        <item name="loading_color1">@color/j2w_pull_color1</item>
        <item name="loading_color2">@color/j2w_pull_color2</item>
        <item name="loading_color3">@color/j2w_pull_color3</item>
        <item name="loading_color4">@color/j2w_pull_color4</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/white</item>
    </style>
    <!-- ViewPagerTab -->
    <style name="J2WPagerSlidingTabStripStyle">
        <item name="pstsIndicatorColor">#51A3FF</item>
        <item name="pstsIndicatorHeight">4dp</item>
        <item name="pstsUnderlineColor">@android:color/transparent</item>
        <item name="pstsUnderlineHeight">1dp</item>
        <item name="pstsDividerColor">@android:color/transparent</item>
        <item name="pstsDividerPadding">0dp</item>
        <item name="pstsTabPaddingLeftRight">0dp</item>
        <item name="pstsScrollOffset">0dp</item>
        <item name="pstsTabBackground">@android:color/transparent</item>
        <item name="pstsShouldExpand">true</item>
        <item name="pstsTextAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="pstsSelectedTextColor">#51A3FF</item>
    </style>

    <!-- Viewpager iconindicator  -->
    <style name="J2W.Layout.Wrap.IconImg">
        <item name="android:paddingBottom">@dimen/icon_indicator_img</item>
        <item name="android:paddingTop">@dimen/icon_indicator_img</item>
        <item name="android:paddingRight">@dimen/icon_indicator_img</item>
        <item name="android:paddingLeft">@dimen/icon_indicator_img</item>
    </style>
</resources>
