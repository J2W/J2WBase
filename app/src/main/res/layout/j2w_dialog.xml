<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/J2W.Layout">

    <TextView
        android:id="@+id/j2w_title"
        style="@style/J2W.TextView.Title"
        tools:text="Title" />

    <LinearLayout style="@style/J2W.Layout.Content">

        <ScrollView
            android:id="@+id/j2w_message_scrollview"
            style="@style/J2W.ScrollView">

            <TextView
                android:id="@+id/j2w_message"
                style="@style/J2W.TextView.Message"
                tools:text="Lorem ipsum doler samet Jane is awesome guy and Kaylee is so hot." />
        </ScrollView>

        <FrameLayout
            android:id="@+id/j2w_custom"
            style="@style/J2W.Layout.Custom" />

        <ListView
            android:id="@+id/j2w_list"
            style="@style/J2W.ListView" />

    </LinearLayout>

    <View
        android:id="@+id/j2w_button_divider"
        style="@style/J2W.Divider" />

    <LinearLayout
        android:id="@+id/j2w_buttons_default"
        style="@style/J2W.Layout.Buttons">

        <Button
            android:id="@+id/j2w_button_neutral"
            style="@style/J2W.Button"
            tools:text="Neutral" />

        <View style="@style/J2W.Expander" />

        <Button
            android:id="@+id/j2w_button_negative"
            style="@style/J2W.Button"
            tools:text="Negative" />

        <Button
            android:id="@+id/j2w_button_positive"
            style="@style/J2W.Button"
            tools:text="Positive" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/j2w_buttons_stacked"
        style="@style/J2W.Layout.Buttons.Stacked">

        <Button
            android:id="@+id/j2w_button_positive_stacked"
            style="@style/J2W.Button.Stacked"
            tools:text="Positive" />

        <Button
            android:id="@+id/j2w_button_negative_stacked"
            style="@style/J2W.Button.Stacked"
            tools:text="Negative" />

        <Button
            android:id="@+id/j2w_button_neutral_stacked"
            style="@style/J2W.Button.Stacked"
            tools:text="Neutral" />
    </LinearLayout>

    <View
        android:id="@+id/j2w_buttons_bottom_space"
        style="@style/J2W.Space.ButtonsBottom" />
</LinearLayout>